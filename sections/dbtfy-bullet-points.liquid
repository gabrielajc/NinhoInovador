{%- if content_for_header contains 'debutify' and settings.dbtfy_product_bullet_points and section.blocks.size > 0 -%}
  <div class="dbtfy dbtfy-product_bullet_points hide"
       data-position="{{ section.settings.dbtfy_bullet_points_position }}">

    <ul>
      {%- for block in section.blocks -%}
        {%- assign point_text = block.settings.dbtfy_bullet_point_text | remove: "<p>" | remove: "</p>" -%}
        {%- assign point_icon = block.settings.dbtfy_bullet_point_icon -%}

        {%- assign visibility_type = block.settings.dbtfy_bullet_point_type -%}
        {%- assign visibility_tag = block.settings.dbtfy_bullet_point_tag -%}
        {%- assign visibility_product = block.settings.dbtfy_bullet_point_product -%}
        {%- assign visibility_collection = block.settings.dbtfy_bullet_point_collection -%}

        {%- if point_text != blank -%}
          <li class="pbp-point"
              data-product-types="{{ visibility_type }}"
              data-product-tags="{{ visibility_tag }}"
              data-product-handle="{{ visibility_product }}"
              data-product-collection="{{ visibility_collection }}">

            {% if point_icon != blank %}
              <span class="{{ settings.icon }} text-secondary">{{ point_icon }}</span>
            {% endif %}

            {{ point_text }}
          </li>
        {%- endif -%}
      {%- endfor -%}
    </ul>
  </div>
{%- endif -%}

