{%- if content_for_header contains 'debutify' and settings.dbtfy_cart_discount -%}
<div class="dbtfy dbtfy-cart_discount{% if position == 'cart_drawer' %} drawer__inner-section ajaxcart__discount{% endif %}{% if position == 'cart_page' %} card card-mobile spacer-top{% endif %}">
  <div class="CartDiscount{% if position == 'cart_page' %} card-body{% endif %}">
    {% unless settings.dbtfy_cart_discount_label == blank %}
      <label for="cd-input">
        <span class="{{ settings.icon }} icon-width" aria-hidden="true">
          {{ settings.dbtfy_cart_discount_icon }}
        </span>

        {{ settings.dbtfy_cart_discount_label }}
      </label>
    {% endunless %}

    <div class="input-group">
      <input id="cd-input" class="input-cart_discount input--small input-group-field" autocomplete="off" type="text" name="discount" placeholder="{{ settings.dbtfy_cart_discount_placeholder }}"/>

      <button type="button" class="btn btn--primary btn-square-small input-group-btn cd-apply" name="apply-discount" aria-label="{{ settings.dbtfy_cart_discount_apply_button_label }}" title="{{ settings.dbtfy_cart_discount_apply_button_label }}">
        <span class="btn__text">
          <span class="{{ settings.icon }} icon-width">
            {{ settings.dbtfy_cart_discount_apply_button_icons }}
          </span>
        </span>
      </button>
    </div>
  </div>
</div>
{%- endif -%}
