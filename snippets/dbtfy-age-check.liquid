{%- if content_for_header contains 'debutify' and  settings.dbtfy_age_check -%}
<div class="dbtfy dbtfy-age_check" data-valid-age="{{ settings.dbtfy_age_check_valid_age }}">
  <div class="modal text-center ac-modal" data-modal-no-close>
    <div class="modal-dialog">
      <div class="modal-content overlay-content">

        <div class="modal-body">
          {%- if settings.dbtfy_age_check_logo_svg != blank -%}
            {%- assign ac_image = settings.dbtfy_age_check_logo_svg -%}
            {%- assign ac_image_type = 'svg' -%}
          {%- elsif settings.dbtfy_age_check_logo_image != blank -%}
            {%- assign ac_image = settings.dbtfy_age_check_logo_image -%}
            {%- assign ac_image_type = 'retina' -%}
          {%- endif -%}

          {%- if ac_image != blank -%}
            <div class="spacer-bottom">
              <img class="ac-image imgset lazyload radius-none"
                {%- render 'lazysizes', img: ac_image, img_type: ac_image_type, img_width: settings.dbtfy_age_check_logo_image_width -%}
                alt="{{ shop.name }}">
            </div>
          {%- endif -%}

          {%- if settings.dbtfy_age_check_title != blank -%}
            <h1>
              {{ settings.dbtfy_age_check_title }}
            </h1>
          {%- endif -%}

          {%- if settings.dbtfy_age_check_description != blank -%}
            <p class="ac-adult-text">
              {{ settings.dbtfy_age_check_description }}
            </p>
          {%- endif -%}

          {%- if settings.dbtfy_age_check_error_message != blank -%}
            <p class="ac-error-text errors text-center" style="display: none;">
              {{ settings.dbtfy_age_check_error_message }}
            </p>
          {%- endif -%}

          {%- if settings.dbtfy_age_check_option == 'birth-date' -%}
            <div>
              <select value="0" class="ac-month-picker select--small spacer-bottom-sm full">
                <option value="0">Month</option>
                <option value="1">January</option>
                <option value="2">February</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
              </select>

              <select value="0" class="ac-day-picker select--small spacer-bottom-sm full">
                <option value="0">Day</option>

                {%- for i in (1..31) -%}
                  <option value="{{ forloop.index }}">{{ i }}</option>
                {%- endfor -%}
              </select>

              <select value="0" class="ac-year-picker select--small spacer-bottom-sm full">
                <option value="0">Year</option>

                {% assign current_year = "now" | date: "%Y" %}

                {%- for i in (1910..current_year) reversed -%}
                  <option value="{{ i }}">{{ i }}</option>
                {%- endfor -%}
              </select>
            </div>

            <button class="btn btn--primary full spacer-top-sm ac-submit-birthdate">{{ settings.dbtfy_age_check_enter }}</button>
          {%- else -%}
            <div class="ac-yes-no-option inline-list">
              <button type="button" class="btn btn--primary ac-yes-option">{{ settings.dbtfy_age_check_yes }}</button>
              <button type="button" class="btn btn--primary ac-no-option">{{ settings.dbtfy_age_check_no }}</button>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  {%- if settings.dbtfy_age_check_background_image != blank -%}
    <div class="ac-popup-image-overlay lazyload bgset overlay-backdrop overlay-modal"
    {%- render 'lazysizes', img: settings.dbtfy_age_check_background_image, img_type: 'background' -%}>
    </div>
  {%- else -%}
    <div class="overlay-modal overlay-backdrop"></div>
  {%- endif -%}
</div>
{% endif %}
